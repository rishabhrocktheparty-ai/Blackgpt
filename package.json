{
  "name": "blackgpt",
  "version": "1.0.0",
  "description": "Production-ready signal intelligence platform with legal compliance",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "nlp-service",
    "common"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "docker-compose up",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cd backend && npm test",
    "test:e2e": "cd tests/e2e && npm test",
    "prisma:generate": "cd prisma && npx prisma generate",
    "prisma:migrate": "cd prisma && npx prisma migrate dev",
    "prisma:studio": "cd prisma && npx prisma studio",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "generate-signal": "node scripts/generate-signal.js"
  },
  "keywords": [
    "signal-intelligence",
    "compliance",
    "trading",
    "news-correlation"
  ],
  "author": "BLACK GPT Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
