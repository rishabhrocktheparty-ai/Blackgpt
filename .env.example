# Database Configuration
DATABASE_URL="postgresql://blackgpt:password@localhost:5432/blackgpt?schema=public"
REDIS_URL="redis://localhost:6379"

# Server Configuration
NODE_ENV="development"
PORT=3000
FRONTEND_PORT=5173

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# API Keys for Legal Public Sources (obtain from respective providers)
# News and Media
NEWS_API_KEY=""
TWITTER_API_KEY=""
TWITTER_API_SECRET=""

# Financial Data
COINGECKO_API_KEY=""
ALPHA_VANTAGE_API_KEY=""
BINANCE_API_KEY=""
COINMARKETCAP_API_KEY=""

# Social Media
REDDIT_CLIENT_ID=""
REDDIT_CLIENT_SECRET=""
REDDIT_USER_AGENT="BlackGPT/1.0"

# NLP Service
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"
ANTHROPIC_API_KEY=""

# Demo Mode (disable external APIs, use canned responses)
DEMO_MODE="false"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# Security
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
ENABLE_CORS="true"

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Compliance
ENABLE_PROVENANCE_VALIDATION="true"
AUTO_FLAG_THRESHOLD=0.4
MIN_CONFIDENCE_SCORE=0.0
