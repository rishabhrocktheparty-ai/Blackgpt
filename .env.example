# BLACK GPT Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
FRONTEND_PORT=5173

# Database
DATABASE_URL=postgresql://blackgpt:password@localhost:5432/blackgpt

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Keys for Legal Public Sources
# Reddit API (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=BlackGPT:v1.0.0

# Twitter API v2 (https://developer.twitter.com)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# News API (https://newsapi.org)
NEWS_API_KEY=your-newsapi-key

# OpenAI (for summarization)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Financial APIs
ALPHA_VANTAGE_KEY=your-alpha-vantage-key
COINGECKO_API_KEY=your-coingecko-api-key

# Blockchain APIs
ETHERSCAN_API_KEY=your-etherscan-api-key
INFURA_PROJECT_ID=your-infura-project-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Demo Mode (disable external APIs for testing)
DEMO_MODE=false

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:5173
BCRYPT_ROUNDS=10

# BullMQ / Queue
QUEUE_NAME=blackgpt-jobs

# Admin Settings
ADMIN_EMAIL=admin@blackgpt.local
ADMIN_PASSWORD=change-this-in-production

# Feature Flags
ENABLE_AUTO_CORRELATION=true
ENABLE_CONTRADICTION_DETECTION=true
REQUIRE_HUMAN_VERIFICATION=true

# WARNING: NEVER add credentials for Tor, dark web, or illicit sources
# All data sources must comply with legal_sources.md
